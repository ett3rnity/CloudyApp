<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/iv_item_location_weather"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_location_cityName"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:layout_toEndOf="@id/iv_item_location_weather"
            android:layout_toRightOf="@id/iv_item_location_weather"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_location_cityWeather"
            android:text="?attr/actionBarSize"
            android:textSize="14sp"
            android:layout_toEndOf="@id/iv_item_location_weather"
            android:layout_toRightOf="@id/iv_item_location_weather"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_below="@id/tv_item_location_cityName"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/iv_item_location_isFavourite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>