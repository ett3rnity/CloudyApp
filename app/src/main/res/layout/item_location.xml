<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_item_location">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/iv_item_location_weather"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"/>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iv_item_location_isFavourite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_item_location_weather"
            android:layout_toRightOf="@id/iv_item_location_weather"
            android:layout_toLeftOf="@id/iv_item_location_isFavourite"
            android:layout_toStartOf="@id/iv_item_location_isFavourite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_location_cityName"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_location_cityWeather"
                android:text="?attr/actionBarSize"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" />



        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>